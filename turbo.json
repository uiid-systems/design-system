{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build-changelog": {
      "cache": false,
      "inputs": ["packages/*/CHANGELOG.md"],
      "outputs": ["packages/changelog.json", "apps/docs/changelog.mdx"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build-changelog"]
    },
    "build-storybook": {
      "dependsOn": ["build-changelog", "^build"],
      "outputs": ["storybook-static/**"]
    },
    "lint": {},
    "format": {}
  }
}
