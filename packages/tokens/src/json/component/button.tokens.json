{
  "$description": "UIID Design System - Button Component Tokens",
  "$schema": "../../../dtcg.schema.json",
  "button": {
    "bg": { "$value": "{shade.foreground}", "$type": "color" },
    "bg-hover": {
      "$value": "#2b2b2b",
      "$type": "color",
      "$extensions": {
        "org.uiid.derive": {
          "method": "mix",
          "colorSpace": "oklab",
          "color1": "{shade.foreground}",
          "color2": "{shade.background}",
          "ratio": 0.15
        }
      }
    },
    "fg": { "$value": "{shade.background}", "$type": "color" },
    "border-width": { "$value": "2px", "$type": "dimension" },
    "border-color": { "$value": "{button.bg}", "$type": "color" },
    "border-radius": { "$value": "{globals.border.radius}", "$type": "dimension" },
    "font-weight": { "$value": 600, "$type": "fontWeight" },
    "padding-x": { "$value": "{forms.padding.x}", "$type": "dimension" },
    "padding-y": { "$value": "{forms.padding.y}", "$type": "dimension" },
    "scale-active": { "$value": 0.98, "$type": "number" },
    "scale-hover": { "$value": 1.02, "$type": "number" },
    "size": {
      "xs": {
        "font-size": { "$value": "{forms.size.xs.font-size}", "$type": "dimension" },
        "height": { "$value": "{forms.size.xs.height}", "$type": "dimension" },
        "padding-x": { "$value": "{forms.size.xs.padding-x}", "$type": "dimension" }
      },
      "sm": {
        "font-size": { "$value": "{forms.size.sm.font-size}", "$type": "dimension" },
        "height": { "$value": "{forms.size.sm.height}", "$type": "dimension" },
        "padding-x": { "$value": "{forms.size.sm.padding-x}", "$type": "dimension" }
      },
      "md": {
        "font-size": { "$value": "{forms.size.md.font-size}", "$type": "dimension" },
        "height": { "$value": "{forms.size.md.height}", "$type": "dimension" },
        "padding-x": { "$value": "{forms.size.md.padding-x}", "$type": "dimension" }
      },
      "lg": {
        "font-size": { "$value": "{forms.size.lg.font-size}", "$type": "dimension" },
        "height": { "$value": "{forms.size.lg.height}", "$type": "dimension" },
        "padding-x": { "$value": "{forms.size.lg.padding-x}", "$type": "dimension" }
      }
    },
    "variant": {
      "default": {
        "bg": { "$value": "{shade.foreground}", "$type": "color" },
        "fg": { "$value": "{shade.background}", "$type": "color" }
      },
      "subtle": {
        "bg": { "$value": "{shade.surface}", "$type": "color" },
        "bg-hover": { "$value": "{shade.accent}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" },
        "border-color": { "$value": "{forms.border.color}", "$type": "color" }
      },
      "inverted": {
        "bg": { "$value": "{shade.background}", "$type": "color" },
        "bg-hover": { "$value": "{shade.accent}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" }
      }
    }
  }
}
