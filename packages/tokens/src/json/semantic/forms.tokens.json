{
  "$description": "UIID Design System - Button Component Tokens",
  "forms": {
    "background": { "$value": "{shade.accent}", "$type": "color" },
    "backgroundHover": { "$value": "{shade.surface}", "$type": "color" },
    "backgroundFocus": {
      "$value": "color_mix(in srgb, {shade.background}, {shade.foreground} 10%)",
      "$type": "color"
    },
    "padding": {
      "x": { "$value": "0.75rem", "$type": "dimension" },
      "y": { "$value": "0.75rem", "$type": "dimension" }
    },
    "border": {
      "color": { "$value": "{shade.halftone}", "$type": "color" }
    },
    "icon": {
      "size": { "$value": "{globals.icon.size}", "$type": "dimension" }
    },
    "size": {
      "xsmall": {
        "font-size": { "$value": "0.75rem", "$type": "dimension" },
        "padding": {
          "x": { "$value": "0.5rem", "$type": "dimension" },
          "y": { "$value": "0.5rem", "$type": "dimension" }
        }
      },
    "small": {
      "fontSize": { "$value": "0.75rem", "$type": "dimension" },
      "height": { "$value": "2rem", "$type": "dimension" },
      "padding-x": { "$value": "0.75rem", "$type": "dimension" }
    },
    "medium": {
      "fontSize": { "$value": "0.875rem", "$type": "dimension" },
      "height": { "$value": "2.625rem", "$type": "dimension" },
      "padding-x": { "$value": "1rem", "$type": "dimension" }
    },
    "large": {
      "fontSize": { "$value": "1rem", "$type": "dimension" },
      "height": { "$value": "3rem", "$type": "dimension" },
      "padding-x": { "$value": "1.25rem", "$type": "dimension" }
    }
    }
  }
}
