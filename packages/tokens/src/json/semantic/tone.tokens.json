{
  "$description": "UIID Design System - Tone Tokens",
  "$schema": "../../../dtcg.schema.json",
  "tone": {
    "$type": "color",
    "positive": { "$value": "{color.green}" },
    "positive-surface": {
      "$value": "#bff0d5",
      "$extensions": {
        "org.uiid.derive": {
          "method": "mix",
          "colorSpace": "oklch",
          "color1": "{tone.positive}",
          "color2": "{shade.background}",
          "ratio": 0.25
        }
      }
    },
    "positive-border": {
      "$value": "#98e7be",
      "$extensions": {
        "org.uiid.derive": {
          "method": "mix",
          "colorSpace": "oklch",
          "color1": "{tone.positive}",
          "color2": "{shade.background}",
          "ratio": 0.40
        }
      }
    },
    "positive-fg": {
      "$value": "#057b42",
      "$extensions": {
        "org.uiid.derive": {
          "method": "mix",
          "colorSpace": "oklch",
          "color1": "{tone.positive}",
          "color2": "{shade.foreground}",
          "ratio": 0.60
        }
      }
    },
