{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Alert component tokens for the Toretto design system",
  "alert": {
    "color": {
      "bg": { "$value": "{shade.surface}", "$type": "color" },
      "fg": { "$value": "{shade.foreground}", "$type": "color" }
    },
    "border": {
      "radius": { "$value": "0.5rem", "$type": "dimension" },
      "width": { "$value": "1px", "$type": "dimension" },
      "color": { "$value": "{shade.halftone}", "$type": "color" }
    },
    "font": {
      "size": { "$value": "{typography.text.1.size}", "$type": "dimension" },
      "weight": { "$value": "600", "$type": "fontWeight" }
    },
    "padding": {
      "x": { "$value": "1rem", "$type": "dimension" },
      "y": { "$value": "0.75rem", "$type": "dimension" }
    },
    "icon": {
      "size": { "$value": "1rem", "$type": "dimension" },
      "scale": { "$value": "1.1", "$type": "number" }
    },
    "variant": {
      "info": {
        "bg": { "$value": "{colors.blue.500}", "$type": "color" },
        "border": { "$value": "{colors.blue.900}", "$type": "color" }
      },
      "warning": {
        "bg": { "$value": "{colors.yellow.700}", "$type": "color" },
        "border": { "$value": "{colors.yellow.900}", "$type": "color" }
      },
      "error": {
        "bg": { "$value": "{colors.red.500}", "$type": "color" },
        "border": { "$value": "{colors.red.900}", "$type": "color" }
      },
      "success": {
        "bg": { "$value": "{colors.green.500}", "$type": "color" },
        "border": { "$value": "{colors.green.900}", "$type": "color" }
      },
      "inverted": {
        "bg": { "$value": "{shade.foreground}", "$type": "color" },
        "border": { "$value": "{shade.foreground}", "$type": "color" },
        "fg": { "$value": "{shade.surface}", "$type": "color" }
      }
    }
  }
}
