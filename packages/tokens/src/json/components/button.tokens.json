{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Button Component Tokens",
  "button": {
    "bg": { "$value": "{shade.foreground}", "$type": "color" },
    "fg": { "$value": "{shade.background}", "$type": "color" },
    "border": {
      "width": { "$value": "{forms.border.width}", "$type": "dimension" },
      "color": { "$value": "{button.bg}", "$type": "color" },
      "radius": { "$value": "{forms.border.radius}", "$type": "dimension" }
    },
    "scale": {
      "active": { "$value": "1", "$type": "number" },
      "hover": { "$value": "1.01", "$type": "number" }
    },
    "disabledOpacity": { "$value": "0.5", "$type": "number" },
    "transition": { "$value": "50ms", "$type": "duration" },
    "hoverMix": { "$value": "85%", "$type": "dimension" },
    "activeMix": { "$value": "80%", "$type": "dimension" },
    "mixColor": { "$value": "{shade.background}", "$type": "color" },
    "size": {
      "sm": {
        "height": { "$value": "{forms.size.sm.height}", "$type": "dimension" },
        "paddingX": { "$value": "1rem", "$type": "dimension" },
        "fontSize": {
          "$value": "{forms.size.sm.fontSize}",
          "$type": "dimension"
        }
      },
      "md": {
        "height": { "$value": "{forms.size.md.height}", "$type": "dimension" },
        "paddingX": { "$value": "1.25rem", "$type": "dimension" },
        "fontSize": {
          "$value": "{forms.size.md.fontSize}",
          "$type": "dimension"
        }
      },
      "lg": {
        "height": { "$value": "{forms.size.lg.height}", "$type": "dimension" },
        "paddingX": { "$value": "1.5rem", "$type": "dimension" },
        "fontSize": {
          "$value": "{forms.size.lg.fontSize}",
          "$type": "dimension"
        }
      }
    },
    "variant": {
      "default": {
        "bg": { "$value": "{shade.foreground}", "$type": "color" },
        "fg": { "$value": "{shade.background}", "$type": "color" }
      },
      "subtle": {
        "bg": { "$value": "{shade.surface}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" },
        "border-color": { "$value": "{shade.muted}", "$type": "color" }
      },
      "primary": {
        "bg": { "$value": "{colors.blue.500}", "$type": "color" },
        "fg": { "$value": "{black}", "$type": "color" }
      },
      "secondary": {
        "bg": { "$value": "{colors.blue.300}", "$type": "color" },
        "fg": { "$value": "{black}", "$type": "color" }
      },
      "tertiary": {
        "bg": { "$value": "{colors.blue.100}", "$type": "color" },
        "fg": { "$value": "{black}", "$type": "color" }
      },
      "inverted": {
        "bg": { "$value": "{colors.shade.background}", "$type": "color" },
        "fg": { "$value": "{colors.shade.foreground}", "$type": "color" }
      }
    }
  }
}
