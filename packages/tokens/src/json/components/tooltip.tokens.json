{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Tooltip component tokens for the Toretto design system",
  "tooltip": {
    "bg": { "$value": "{shade.surface}", "$type": "color" },
    "fg": { "$value": "{shade.foreground}", "$type": "color" },
    "font": {
      "size": { "$value": "{typography.text.0.size}", "$type": "dimension" },
      "lineHeight": {
        "$value": "{typography.text.0.lineHeight}",
        "$type": "dimension"
      }
    },
    "border": {
      "radius": { "$value": "0.5rem", "$type": "dimension" },
      "width": { "$value": "1px", "$type": "dimension" },
      "color": { "$value": "{shade.halftone}", "$type": "color" }
    },
    "padding": {
      "x": { "$value": "0.75rem", "$type": "dimension" },
      "y": { "$value": "0.25rem", "$type": "dimension" }
    },
    "transition": {
      "timing": { "$value": "{globals.transition.timing}", "$type": "duration" }
    },
    "transform": {
      "origin": { "$value": "center", "$type": "string" },
      "scale": { "$value": "0.9", "$type": "number" }
    }
  }
}
