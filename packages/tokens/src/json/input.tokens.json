{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Input Tokens",
  "input": {
    "required": {
      "content": { "$value": "attr(data-required-content)", "$type": "string" },
      "color": { "$value": "{colors.red.500}", "$type": "color" }
    },
    "label": {
      "wrapperGap": { "$value": "0.5rem", "$type": "dimension" },
      "font": {
        "size": { "$value": "0.875rem", "$type": "dimension" },
        "weight": { "$value": "500", "$type": "fontWeight" }
      }
    },
    "description": {
      "font": {
        "size": { "$value": "0.75rem", "$type": "dimension" },
        "weight": { "$value": "400", "$type": "fontWeight" }
      },
      "color": { "$value": "{shade.accent}", "$type": "color" }
    },
    "hint": {
      "font": {
        "style": { "$value": "normal", "$type": "fontStyle" },
        "size": { "$value": "0.75rem", "$type": "dimension" },
        "weight": { "$value": "600", "$type": "fontWeight" }
      },
      "color": { "$value": "{shade.accent}", "$type": "color" }
    },
    "placeholder": {
      "color": { "$value": "{shade.accent}", "$type": "color" }
    },
    "bookend": {
      "color": { "$value": "{shade.accent}", "$type": "color" },
      "font": {
        "size": { "$value": "0.75rem", "$type": "dimension" },
        "weight": { "$value": "600", "$type": "fontWeight" }
      }
    }
  }
}
