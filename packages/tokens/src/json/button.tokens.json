{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Button Component Tokens",
  "button": {
    "bg": { "$value": "{shade.foreground}", "$type": "color" },
    "fg": { "$value": "{shade.background}", "$type": "color" },
    "border": {
      "width": { "$value": "2px", "$type": "dimension" },
      "color": { "$value": "{button.bg}", "$type": "color" },
      "radius": { "$value": "{globals.border.radius}", "$type": "dimension" }
    },
    "font-weight": { "$value": "600", "$type": "number" },
    "scale": {
      "active": { "$value": "0.98", "$type": "number" },
      "hover": { "$value": "1.02", "$type": "number" }
    },
    "mix": {
      "color": { "$value": "{shade.background}", "$type": "color" },
      "hover": { "$value": "85%", "$type": "dimension" },
      "active": { "$value": "80%", "$type": "dimension" }
    },
    "size": {
      "sm": { "padding-x": { "$value": "0.75rem", "$type": "dimension" } },
      "md": { "padding-x": { "$value": "1rem", "$type": "dimension" } },
      "lg": { "padding-x": { "$value": "1.25rem", "$type": "dimension" } }
    },
    "variant": {
      "default": {
        "bg": { "$value": "{shade.foreground}", "$type": "color" },
        "fg": { "$value": "{shade.background}", "$type": "color" }
      },
      "subtle": {
        "bg": { "$value": "{forms.background}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" },
        "border-color": { "$value": "{forms.border.color}", "$type": "color" }
      },
      "inverted": {
        "bg": { "$value": "{shade.background}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" },
        "border-color": { "$value": "{shade.background}", "$type": "color" }
      }
    }
  }
}
