{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Button Component Tokens",
  "button": {
    "bg": { "$value": "{shade.foreground}", "$type": "color" },
    "bg-hover": {
      "$value": "color-mix(in oklab, {shade.foreground}, {shade.background} 15%)",
      "$type": "color"
    },
    "fg": { "$value": "{shade.background}", "$type": "color" },
    "border": {
      "width": { "$value": "2px", "$type": "dimension" },
      "color": { "$value": "{button.bg}", "$type": "color" },
      "radius": { "$value": "{globals.border.radius}", "$type": "dimension" }
    },
    "font-weight": { "$value": "600", "$type": "number" },
    "padding": {
      "x": { "$value": "{forms.padding.x}", "$type": "dimension" },
      "y": { "$value": "{forms.padding.y}", "$type": "dimension" }
    },
    "scale": {
      "active": { "$value": "0.98", "$type": "number" },
      "hover": { "$value": "1.02", "$type": "number" }
    },
    "size": {
      "xs": {
        "font-size": { "$value": "0.625rem", "$type": "dimension" },
        "height": { "$value": "1.75rem", "$type": "dimension" },
        "padding-x": { "$value": "0.5rem", "$type": "dimension" }
      },
      "sm": {
        "font-size": { "$value": "0.75rem", "$type": "dimension" },
        "height": { "$value": "2rem", "$type": "dimension" },
        "padding-x": { "$value": "0.75rem", "$type": "dimension" }
      },
      "md": {
        "font-size": { "$value": "0.875rem", "$type": "dimension" },
        "height": { "$value": "2.625rem", "$type": "dimension" },
        "padding-x": { "$value": "1rem", "$type": "dimension" }
      },
      "lg": {
        "font-size": { "$value": "1rem", "$type": "dimension" },
        "height": { "$value": "3rem", "$type": "dimension" },
        "padding-x": { "$value": "1.25rem", "$type": "dimension" }
      }
    },
    "variant": {
      "default": {
        "bg": { "$value": "{shade.foreground}", "$type": "color" },
        "fg": { "$value": "{shade.background}", "$type": "color" }
      },
      "subtle": {
        "bg": { "$value": "{forms.background}", "$type": "color" },
        "bg-hover": { "$value": "{forms.backgroundHover}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" },
        "border-color": { "$value": "{forms.border.color}", "$type": "color" }
      },
      "inverted": {
        "bg": { "$value": "{shade.background}", "$type": "color" },
        "bg-hover": { "$value": "{shade.muted}", "$type": "color" },
        "fg": { "$value": "{shade.foreground}", "$type": "color" }
      }
    }
  }
}
