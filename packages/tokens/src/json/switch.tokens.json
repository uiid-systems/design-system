{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Switch Component Tokens",
  "switch": {
    "height": { "$value": "1.5rem", "$type": "dimension" },
    "width": { "$value": "2.5rem", "$type": "dimension" },
    "color": {
      "bg": { "$value": "{shade.accent}", "$type": "color" },
      "fg": { "$value": "{shade.foreground}", "$type": "color" }
    },
    "disabled": {
      "opacity": { "$value": "0.5", "$type": "number" }
    }
  }
}
