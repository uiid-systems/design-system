{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Primitive Typography Tokens",
  "typography": {
    "text": {
      "-1": {
        "size": { "$value": "0.75rem", "$type": "dimension" },
        "leading": { "$value": "0.01rem", "$type": "dimension" },
        "lineHeight": { "$value": "140%", "$type": "dimension" },
        "weight": { "$value": "400", "$type": "fontWeight" }
      },
      "0": {
        "size": { "$value": "0.875rem", "$type": "dimension" },
        "leading": { "$value": "0", "$type": "dimension" },
        "lineHeight": { "$value": "150%", "$type": "dimension" },
        "weight": { "$value": "400", "$type": "fontWeight" }
      },
      "1": {
        "size": { "$value": "1rem", "$type": "dimension" },
        "leading": { "$value": "-0.01rem", "$type": "dimension" },
        "lineHeight": { "$value": "140%", "$type": "dimension" },
        "weight": { "$value": "400", "$type": "fontWeight" }
      },
      "2": {
        "size": { "$value": "1.25rem", "$type": "dimension" },
        "leading": { "$value": "2%", "$type": "dimension" },
        "lineHeight": { "$value": "140%", "$type": "dimension" },
        "weight": { "$value": "400", "$type": "fontWeight" }
      },
      "3": {
        "size": { "$value": "1.5rem", "$type": "dimension" },
        "leading": { "$value": "1%", "$type": "dimension" },
        "lineHeight": { "$value": "140%", "$type": "dimension" },
        "weight": { "$value": "500", "$type": "fontWeight" }
      },
      "4": {
        "size": { "$value": "1.875rem", "$type": "dimension" },
        "leading": { "$value": "1%", "$type": "dimension" },
        "lineHeight": { "$value": "140%", "$type": "dimension" },
        "weight": { "$value": "600", "$type": "fontWeight" }
      },
      "5": {
        "size": { "$value": "2.25rem", "$type": "dimension" },
        "leading": { "$value": "0.25%", "$type": "dimension" },
        "lineHeight": { "$value": "130%", "$type": "dimension" },
        "weight": { "$value": "600", "$type": "fontWeight" }
      },
      "6": {
        "size": { "$value": "3rem", "$type": "dimension" },
        "leading": { "$value": "-0.5%", "$type": "dimension" },
        "lineHeight": { "$value": "120%", "$type": "dimension" },
        "weight": { "$value": "600", "$type": "fontWeight" }
      }
    }
  },
  "font": {
    "mono": {
      "$value": "ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace",
      "$type": "string"
    },
    "serif": {
      "$value": "ui-serif, Georgia, Cambria, \"Times New Roman\", Times, serif;",
      "$type": "string"
    },
    "sans": {
      "$value": "ui-sans-serif, system-ui, sans-serif, \"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\", \"Noto Color Emoji\"",
      "$type": "string"
    }
  }
}
