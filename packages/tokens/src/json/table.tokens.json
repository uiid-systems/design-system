{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Table Component Tokens",
  "table": {
    "min-width": { "$value": "48rem", "$type": "dimension" },
    "head": {
      "background-color": { "$value": "{shade.muted}", "$type": "color" },
      "color": { "$value": "{shade.foreground}", "$type": "color" }
    },
    "cell": {
      "padding": {
        "x": { "$value": "0.75rem", "$type": "dimension" },
        "y": { "$value": "0.5rem", "$type": "dimension" }
      }
    }
  }
}
