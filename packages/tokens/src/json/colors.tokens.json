{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "UIID Design System - Color Tokens",
  "color": {
    "white": { "$value": "white", "$type": "color" },
    "black": { "$value": "black", "$type": "color" },
    "red": { "$value": "oklch(0.63 0.24 27)", "$type": "color" },
    "orange": { "$value": "oklch(0.75 0.18 55)", "$type": "color" },
    "yellow": { "$value": "oklch(0.80 0.17 90)", "$type": "color" },
    "green": { "$value": "oklch(0.72 0.19 152)", "$type": "color" },
    "blue": { "$value": "oklch(0.62 0.21 261)", "$type": "color" },
    "indigo": { "$value": "oklch(0.55 0.24 285)", "$type": "color" },
    "purple": { "$value": "oklch(0.55 0.24 303)", "$type": "color" }
  },
  "shade": {
    "1": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 97%)",
      "$type": "color"
    },
    "2": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 93%)",
      "$type": "color"
    },
    "3": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 88%)",
      "$type": "color"
    },
    "4": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 82%)",
      "$type": "color"
    },
    "5": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 74%)",
      "$type": "color"
    },
    "6": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 64%)",
      "$type": "color"
    },
    "7": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 50%)",
      "$type": "color"
    },
    "8": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 38%)",
      "$type": "color"
    },
    "9": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 28%)",
      "$type": "color"
    },
    "10": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 18%)",
      "$type": "color"
    },
    "11": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 10%)",
      "$type": "color"
    },
    "12": {
      "$value": "color-mix(in oklch, {shade.foreground}, {shade.background} 4%)",
      "$type": "color"
    },
    "background": {
      "$value": "light-dark({color.white}, {color.black})",
      "$type": "color"
    },
    "surface": { "$value": "{shade.4}", "$type": "color" },
    "accent": { "$value": "{shade.5}", "$type": "color" },
    "halftone": { "$value": "{shade.7}", "$type": "color" },
    "muted": { "$value": "{shade.9}", "$type": "color" },
    "foreground": {
      "$value": "light-dark({color.black}, {color.white})",
      "$type": "color"
    }
  },
  "tone": {
    "positive": { "$value": "{color.green}", "$type": "color" },
    "positive-surface": {
      "$value": "color-mix(in oklch, {tone.positive}, {shade.background} 75%)",
      "$type": "color"
    },
    "positive-border": {
      "$value": "color-mix(in oklch, {tone.positive}, {shade.background} 60%)",
      "$type": "color"
    },
    "positive-foreground": {
      "$value": "color-mix(in oklch, {tone.positive}, {shade.foreground} 60%)",
      "$type": "color"
    },
    "warning": { "$value": "{color.yellow}", "$type": "color" },
    "warning-surface": {
      "$value": "color-mix(in oklch, {tone.warning}, {shade.background} 75%)",
      "$type": "color"
    },
    "warning-border": {
      "$value": "color-mix(in oklch, {tone.warning}, {shade.background} 60%)",
      "$type": "color"
    },
    "warning-foreground": {
      "$value": "color-mix(in oklch, {tone.warning}, {shade.foreground} 60%)",
      "$type": "color"
    },
    "critical": { "$value": "{color.red}", "$type": "color" },
    "critical-surface": {
      "$value": "color-mix(in oklch, {tone.critical}, {shade.background} 75%)",
      "$type": "color"
    },
    "critical-border": {
      "$value": "color-mix(in oklch, {tone.critical}, {shade.background} 60%)",
      "$type": "color"
    },
    "critical-foreground": {
      "$value": "color-mix(in oklch, {tone.critical}, {shade.foreground} 60%)",
      "$type": "color"
    },
    "info": { "$value": "{color.blue}", "$type": "color" },
    "info-surface": {
      "$value": "color-mix(in oklch, {tone.info}, {shade.background} 75%)",
      "$type": "color"
    },
    "info-border": {
      "$value": "color-mix(in oklch, {tone.info}, {shade.background} 60%)",
      "$type": "color"
    },
    "info-foreground": {
      "$value": "color-mix(in oklch, {tone.info}, {shade.foreground} 60%)",
      "$type": "color"
    }
  }
}
