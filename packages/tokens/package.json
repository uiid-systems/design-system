{
  "name": "@uiid/tokens",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    "./globals.css": "./src/globals.css",
    "./components/*": "./src/css/components/*",
    "./primitives/*": "./src/css/primitives/*"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "node ../../scripts/generate-tokens.cjs",
    "dev": "node ../../scripts/generate-tokens.cjs",
    "watch": "nodemon --watch src/json --ext tokens.json --exec \"node ../../scripts/generate-tokens.cjs\"",
    "lint": "echo 'No linting for CSS tokens'",
    "format": "prettier --write \"src/**/*.css\" \"src/**/*.json\""
  },
  "devDependencies": {
    "@storybook/react-vite": "^9.1.2",
    "@types/react": "^19.1.10",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "react": "^19.1.1",
    "storybook": "^9.1.2",
    "typescript": "~5.8.3"
  }
}
