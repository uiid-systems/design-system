{
  "name": "@uiid/tokens",
  "version": "0.0.5",
  "description": "Design tokens and CSS custom properties for the UIID design system",
  "license": "MIT",
  "author": "Adam Fratino",
  "repository": {
    "type": "git",
    "url": "https://github.com/uiid-systems/design-system",
    "directory": "packages/tokens"
  },
  "homepage": "https://github.com/uiid-systems/design-system/tree/main/packages/tokens",
  "bugs": "https://github.com/uiid-systems/design-system/issues",
  "keywords": [
    "uiid",
    "react",
    "components",
    "design-system",
    "tokens",
    "css-custom-properties",
    "design-tokens"
  ],
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    "./globals.css": "./src/globals.css",
    "./*": "./src/css/*"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "npm run build:generate && npm run build:legacy",
    "build:generate": "node --experimental-json-modules ./scripts/generate-scales.js",
    "build:legacy": "node ../../scripts/generate-tokens.cjs",
    "build:sd": "style-dictionary build --config style-dictionary.config.js",
    "dev": "node ../../scripts/generate-tokens.cjs",
    "watch": "nodemon --watch src/json --ext tokens.json --exec \"node ../../scripts/generate-tokens.cjs\"",
    "lint": "echo 'No linting for CSS tokens'",
    "lint:tokens": "ajv validate -s dtcg.schema.json -d 'src/json/**/*.tokens.json'",
    "format": "prettier --write \"src/**/*.css\" \"src/**/*.json\"",
    "figma:preview": "DRY_RUN=true node ./scripts/sync-to-figma.js",
    "figma:sync": "node ./scripts/sync-to-figma.js"
  },
  "devDependencies": {
    "@storybook/react-vite": "^10.2.3",
    "@types/react": "^19.1.10",
    "ajv-cli": "^5.0.0",
    "nodemon": "^3.1.10",
    "prettier": "3.8.1",
    "react": "^19.1.1",
    "storybook": "^10.2.3",
    "style-dictionary": "^5.3.0",
    "typescript": "~5.9.3"
  }
}
